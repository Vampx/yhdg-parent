<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.com.yusong.yhdg.agentserver.persistence.hdg.VipPriceShopMapper">

    <select id="findListByPriceId" parameterType="long" resultType="cn.com.yusong.yhdg.common.domain.hdg.VipPriceShop">
        SELECT
        *
        FROM hdg_vip_price_shop
        where price_id = #{priceId}
    </select>

    <select id="findByPriceId"  resultType="cn.com.yusong.yhdg.common.domain.hdg.VipPriceShop">
        SELECT
        *
        FROM hdg_vip_price_shop
        where price_id = #{priceId}
        and shop_id = #{shopId}
        limit 1
    </select>

    <select id="find" parameterType="long" resultType="cn.com.yusong.yhdg.common.domain.hdg.VipPriceShop">
        SELECT
        *
        FROM hdg_vip_price_shop
        where id = #{id}
    </select>

    <select id="findByShopId" parameterType="string" resultType="cn.com.yusong.yhdg.common.domain.hdg.VipPriceShop">
        SELECT
        *
        FROM hdg_vip_price_shop
        where shop_id = #{shopId}
    </select>

    <insert id="insert" parameterType="cn.com.yusong.yhdg.common.domain.hdg.VipPriceShop" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO hdg_vip_price_shop(
          shop_id,
          price_id
        ) VALUES (
          #{shopId},
          #{priceId}
        )
    </insert>

    <delete id="delete">
        delete from hdg_vip_price_shop where id = #{id}
    </delete>

    <delete id="deleteByPriceId">
        delete from hdg_vip_price_shop where price_id = #{priceId}
    </delete>

</mapper>