<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
        <logger name="cn.com.yusong.yhdg.webserver.persistence" level="TRACE" additivity="false">
            <AppenderRef ref="Console"/>
        </logger>

        <logger name="cn.com.yusong.yhdg.webserver.web.controller.security" level="TRACE" additivity="false">
            <AppenderRef ref="Console"/>
        </logger>

        <logger name="cn.com.yusong.yhdg.webserver.utils" level="TRACE" additivity="false">
            <AppenderRef ref="Console"/>
        </logger>

        <logger name="cn.com.yusong.yhdg.webserver.biz" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </logger>

        <logger name="cn.com.yusong.yhdg.webserver.comm" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </logger>

        <logger name="cn.com.yusong.yhdg.common.tool.netty" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </logger>

    </Loggers>
</Configuration>