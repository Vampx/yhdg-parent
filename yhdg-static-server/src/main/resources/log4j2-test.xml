<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
        <logger name="cn.com.yusong.hdg.common.tool.netty" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </logger>
        <logger name="cn.com.yusong.hdg.staticserver" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </logger>

        <logger name="cn.com.yusong.hdg.staticserver.comm.client" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </logger>
    </Loggers>
</Configuration>